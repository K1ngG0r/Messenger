<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" Name="column1"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <local:MainPage DataContext="{Binding MainPageViewModel}" Grid.Column="0"/>
        <local:ChatPage DataContext="{Binding ChatPageViewModel}" Grid.Column="1"/>
        <Thumb Grid.Column="1" Grid.ColumnSpan="2" Background="Gray" Cursor="SizeWE"
               Width="1" DragDelta="Thumb_DragDelta" HorizontalAlignment="Left"/>
    </Grid>
</Window>
