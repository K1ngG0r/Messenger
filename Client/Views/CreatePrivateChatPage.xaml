<UserControl x:Class="Client.Views.CreatePrivateChatPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             xmlns:vm="clr-namespace:Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="450">
    <Grid>
        <!--список контактов (advanced)-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <Button Content="..." Width="50" FontSize="30"
            DockPanel.Dock="Left" Command="{Binding NavigateToMainPageCommand}"/>
            </DockPanel>
            <TextBlock Grid.Row="1"
                   Text="Input username" 
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Left"/>
            <TextBox Grid.Row="2"
            Text="{Binding ContactUsername, Mode=TwoWay}"/>
            <Button Grid.Row="3"
            Content="Create"
                Command="{Binding SubmitCommand}"/>
        </Grid>
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding FoundUser}">
                <ContentControl.Resources>
                    <DataTemplate DataType="vm:UserViewModel">
                        <StackPanel>
                            <local:AvatarImage DataContext="{Binding Avatar}"/>
                            <TextBlock Text="{Binding Username}"/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</UserControl>
